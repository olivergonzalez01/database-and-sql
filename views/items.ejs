<html>

<head>
<title>Incredibly Simple Shopping</title>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<link rel="stylesheet" href="main.css">

</head>

<body>

<div class="container">

<div class="pb-2 mt-4 mb-2">
	<h1>Buy More!</h1>
</div>

<div class="row col-8">
<table class="table">

<thead>
	<tr>
		<th></th>
		<th>Name</th>
		<th class="price">Price</th>
	</tr>
</thead>

<!-- 
	generate these table rows from the database
-->
<% for (let item of items) { %>
<tr>
	<td rowspan="2">
		<img class="thumb" src="<%=item.url%>">
	</td>
	<td><span class="name"><a href="item_view/<%=item.id%>"><%=item.name%></a></span></td>
	<td class="price">$<%=item.price%>.00</td>
</tr>
<tr><td colspan="2"><%=item.description%></td></tr>
<% } %>

<!-- end generating table rows -->

</table>
<u><h1>The items from my "database":</h1></u>
<ul>
	<% for (let item of items) { %>
		<li><b><%=item.name%></b> <%=item.description%> | price: $<%=item.price%></li>
	<% } %>
</ul>
</div>

</body>

</html>
